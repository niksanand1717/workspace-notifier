{
  "name": "@gchat-notifier/node",
  "version": "0.7.0",
  "description": "Professional Google Chat notification SDK for Node.js. Capture errors and latency alerts via clean GChat Card webhooks.",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "assets",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "node --import tsx --test 'src/**/*.test.ts'",
    "publish-patch": "npm version patch && npm publish --access public",
    "publish-minor": "npm version minor && npm publish --access public",
    "publish-major": "npm version major && npm publish --access public",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "error-tracking",
    "error-handler",
    "exception",
    "google-chat",
    "google-workspace",
    "workspace",
    "webhook",
    "monitoring",
    "logging",
    "alerting",
    "notifications",
    "express",
    "fastify",
    "nestjs",
    "nodejs",
    "typescript",
    "observability",
    "sentry-alternative",
    "logrocket-alternative",
    "datadog-alternative",
    "newrelic-alternative",
    "rollbar-alternative",
    "bugsnag-alternative",
    "honeybadger-alternative",
    "airbrake-alternative",
    "error-reporting",
    "sentry",
    "rollbar",
    "bugsnag",
    "datadog"
  ],
  "author": "Niks",
  "license": "MIT",
  "homepage": "https://github.com/niksanand1717/workspace-notifier",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/niksanand1717/workspace-notifier.git"
  },
  "bugs": {
    "url": "https://github.com/niksanand1717/workspace-notifier/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@nestjs/common": "^11.1.11",
    "@types/express": "^5.0.6",
    "@types/node": "^22.0.0",
    "fastify": "^5.6.2",
    "reflect-metadata": "^0.2.2",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@nestjs/common": ">=9.0.0",
    "express": ">=4.0.0",
    "fastify": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    },
    "fastify": {
      "optional": true
    },
    "@nestjs/common": {
      "optional": true
    }
  }
}
